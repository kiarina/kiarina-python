#!/usr/bin/env bash
#MISE description="Build <package>"
#USAGE arg "<package>" help="Package name (e.g. 'kiarina-utils-common')"

set -euo pipefail

package="$usage_package"

# Package name validation
if [ ! -d "packages/$package" ]; then
    echo "âŒ Package not found: $package"
    exit 1
fi

echo "ğŸ—ï¸  Building $package..."

# Navigate to the package directory and build
cd "packages/$package"
uv build
cd - > /dev/null

echo "âœ… $package built successfully!"
echo "ğŸ“ Built package is in packages/$package/dist/ directory"
